/* Matrix operations */
matrix_n m1 := 2, 2 [[1, 2], [3, 4]];
matrix_n m2 := 2, 2 [[5, 6], [7, 8]];
matrix_n m3 := m1 add_m m2;

// Print("Matrix addition:");
Print(m3);

matrix_n m4 := m1 mul_m m2;
// Print("Matrix multiplication:");
Print(m4);

matrix_n transposed := transp_m m1;
// Print("Transposed matrix:");
Print(transposed);

/* Scoping test */
int scope_test := 100;
{
    int scope_test := 200;
    // Print("Inner scope value:");
    Print(scope_test);
    {
        int scope_test := 300;
        // Print("Innermost scope value:");
        Print(scope_test);
    }
    // Print("Back to inner scope:");
    Print(scope_test);
}
// Print("Outer scope value:");
Print(scope_test);